-- SQL request(s)​​​​​​‌​‌​‌‌​​​​​​​‌‌​‌​‌‌‌‌​​‌ below

SELECT CUSTOMERS.CUSTOMERID, CUSTOMERS.FIRSTNAME, CUSTOMERS.LASTNAME,  SUM(DISHES.PRICE) AS TOTALSPEND
FROM CUSTOMERS
JOIN ORDERS
ON CUSTOMERS.CUSTOMERID = ORDERS.CUSTOMERID
JOIN ORDERSDISHES
ON ORDERS.ORDERID = ORDERSDISHES.ORDERID
JOIN DISHES
ON ORDERSDISHES.DISHID = DISHES.DISHID
GROUP BY CUSTOMERS.CUSTOMERID
HAVING TOTALSPEND>450
ORDER BY TOTALSPEND DESC;
