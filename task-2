-- SQL request(s)​​​​​​‌​‌​‌‌​​​​‌​‌‌‌​​‌‌‌​​​‌‌ below

SELECT Orders.OrderID, GROUP_CONCAT(DISHES.NAME ORDER BY DISHES.NAME SEPARATOR ',') AS ITEMS
FROM Orders
RIGHT JOIN ORDERSDISHES
ON ORDERS.ORDERID = ORDERSDISHES.ORDERID
RIGHT JOIN DISHES
ON ORDERSDISHES.DISHID = DISHES.DISHID
WHERE ORDERS.ORDERDATE >= '2022-05-01 00:00:00.0'
GROUP BY ORDERS.ORDERID
;
